@using SistemRecrutare.Models
@model ContNouViewModel
@{
    ViewBag.Title = "Cont nou";
}

    <div class="row" style="background-color:white">
        <br /><br />
        <h2 class="titlu">@ViewBag.Title</h2>

        @* inregistrare efectuata cu succes - mesaj *@
        @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status) == true)
        {
            if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    <strong>Succes!</strong>@ViewBag.Message
                </div>
            }
        }

        @* inregistrare neefectuata - form si mesaj de eroare *@
        else
        {
            using (Html.BeginForm("ContNou", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4 class="subtitlu">Inregistreaza-te pentru a incepe sa creezi un CV</h4>
                <hr />

                <div class="aliniament-cp">
                    @*@Html.ValidationSummary("", new { @class = "text-danger" })  sumar erori*@ 

                    @* E-mail *@
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.TextBoxFor(m => m.Email, new {placeholder = "Email", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            @Html.ValidationMessage("ExistaEmail", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* Parola *@
                    <div class="form-group">
                        @Html.LabelFor(m => m.Parola, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.PasswordFor(m => m.Parola, new {placeholder = "Introduceti Parola", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Parola, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    @* Confirmare Parola  *@
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmaParola, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.PasswordFor(m => m.ConfirmaParola, new {placeholder = "Confirmare Parola", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ConfirmaParola, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* Prenume *@
                    <div class="form-group">
                        @Html.LabelFor(m => m.Prenume, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.TextBoxFor(m => m.Prenume, new {placeholder = "Prenume", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Prenume, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* Nume *@
                    <div class="form-group">
                        @Html.LabelFor(m => m.Nume, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.TextBoxFor(m => m.Nume, new {placeholder = "Nume", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Nume, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* Oraș *@
                    <div class="form-group">
                        @Html.LabelFor(m => m.Oras, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.TextBoxFor(m => m.Oras, new {placeholder = "Orasul in care locuiti", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Oras, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* Telefon *@
                    <div class="form-group">
                        @Html.LabelFor(m => m.Telefon, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.TextBoxFor(m => m.Telefon, new {placeholder = "Telefon", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Telefon, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* Data Nașterii *@
                    <div class="form-group">
                        @Html.LabelFor(m => m.Data_nasterii, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.EditorFor(m => m.Data_nasterii, new {placeholder = "Data Nasterii", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Data_nasterii, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* Sex *@
                    <div class="form-group">
                        @Html.LabelFor(m => m.Sex, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @*@Html.TextBoxFor(m => m.Sex, new { @class = "form-control" })*@
                            @Html.DropDownList("Sex", new SelectList(Enum.GetValues(typeof(Sex_Utilizator))), "Alege",
                        new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Sex, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* Domenii de Lucru *@
                    <div class="form-group">
                        @Html.LabelFor(m => m.Domenii_lucru, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.TextBoxFor(m => m.Domenii_lucru, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Domenii_lucru, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                @* Creare Cont *@
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default button" value="Creeaza cont" />
                    </div>
                </div>
            }

            if (ViewBag.Message != null)
            {
                <div class="alert alert-danger">
                    <strong>Eroare!</strong>@ViewBag.Message
                </div>
            }
        }

        @* spre Login *@
        <div>
            @Html.ActionLink("Intra in Cont", "Login", "Account")
        </div>
    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


