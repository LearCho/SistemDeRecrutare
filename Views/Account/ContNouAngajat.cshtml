@using SistemRecrutare.Models

@model UtilizatorViewModel

@{
    ViewBag.Title = "Cont nou";
}

@* plugin multiselect & chosen jquery *@
<link rel="stylesheet" href="//cdn.jsdelivr.net/chosen/1.1.0/chosen.css" />
<link rel="stylesheet" href="~/Content/chosen.min.css" />

<script type="text/javascript" src="//cdn.jsdelivr.net/chosen/1.1.0/chosen.jquery.js"></script>
<script type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>
<script type="text/javascript" src="~/Scripts/chosen.jquery.min.js"></script>


<div class="row" style="background-color:white">
    <br /><br />
    <h2 class="titlu">@ViewBag.Title</h2>

    @* inregistrare efectuata cu succes - mesaj *@
    @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status) == true)
    {
        if (ViewBag.Message != null)
        {
            <div class="alert alert-success">
                <br /><br /><br /><br />
                <strong>Succes</strong>@ViewBag.Message
            </div>
        }
    }

    @* inregistrare neefectuata - form si mesaj de eroare *@
    else
    {
        using (Html.BeginForm("ContNouAngajat", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 class="subtitlu">Inregistreaza-te pentru a incepe sa creezi un CV</h4>
            <hr />

            <div class="aliniament-cp">
                @* E-mail *@
                <div class="form-group">
                    @Html.LabelFor(m => m.Utilizator.email, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Utilizator.email, new { placeholder = "Email", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Utilizator.email, "", new { @class = "text-danger" })
                        @* eroare e-mail existent*@
                        @Html.ValidationMessage("ExistaEmail", new { @class = "text-danger" })
                    </div>
                </div>

                @* Parola *@
                <div class="form-group">
                    @Html.LabelFor(m => m.Utilizator.parola, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.PasswordFor(m => m.Utilizator.parola, new { placeholder = "Introduceti Parola", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Utilizator.parola, "", new { @class = "text-danger" })

                    </div>
                </div>

                @* Confirmare Parola  *@
                <div class="form-group">
                    @Html.LabelFor(m => m.Utilizator.confirma_parola, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.PasswordFor(m => m.Utilizator.confirma_parola, new { placeholder = "Confirmare Parola", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Utilizator.confirma_parola, "", new { @class = "text-danger" })
                    </div>
                </div>

                @* Prenume *@
                <div class="form-group">
                    @Html.LabelFor(m => m.Utilizator.prenume_utilizator, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Utilizator.prenume_utilizator, new { placeholder = "Prenume", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Utilizator.prenume_utilizator, "", new { @class = "text-danger" })
                    </div>
                </div>

                @* Nume *@
                <div class="form-group">
                    @Html.LabelFor(m => m.Utilizator.nume_utilizator, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Utilizator.nume_utilizator, new { placeholder = "Nume", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Utilizator.nume_utilizator, "", new { @class = "text-danger" })
                    </div>
                </div>

                @* Oraș *@
                <div class="form-group">
                    @Html.LabelFor(m => m.Utilizator.oras, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Utilizator.oras, new { placeholder = "Orasul in care locuiti", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Utilizator.oras, "", new { @class = "text-danger" })
                    </div>
                </div>

                @* Telefon *@
                <div class="form-group">
                    @Html.LabelFor(m => m.Utilizator.telefon, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Utilizator.telefon, new { placeholder = "Telefon", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Utilizator.telefon, "", new { @class = "text-danger" })
                    </div>
                </div>

                @* Data Nașterii *@
                <div class="form-group">
                    @Html.LabelFor(m => m.Utilizator.data_nasterii, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.EditorFor(m => m.Utilizator.data_nasterii, new { placeholder = "Data Nasterii", @class = "form-control" })
                       <p></p>
                        @Html.ValidationMessageFor(m => m.Utilizator.data_nasterii, "", new { @class = "text-danger" })
                    </div>
                </div>

                @* Sex *@
                <div class="form-group">
                    @Html.LabelFor(m => m.Utilizator.sex, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.DropDownList("Utilizator.sex", new SelectList(Enum.GetValues(typeof(Sex_Utilizator))), "Alege",
                        new { @class = "form-control" })
                    </div>
                </div>

                @* Domenii de Lucru de Interes*@
                <div class="form-group">
                    @Html.Label("Domenii de interes*:", new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @if (Model.ListaDomenii != null)
                        {
                            @*<select asp-for="DomeniiSelectateIds" class="form-control chosen-select" asp-items="Model.ListaDomenii" multiple>
                            </select>*@
                            @Html.DropDownList("DomeniiSelectateIds", Model.ListaDomenii, new { @class = "col-md-5 control-label chosen-select", multiple = "" })
                            <div style="font-size:smaller">Te rugam sa selectezi cel putin un domeniu</div>
                        }
                        else // nu se intra aici
                        {
                             //@Html.DropDownList("DomeniiSelectateIds", Model.ListaDomenii, new { @class = "col-md-5 control-label chosen-select", multiple = "" })
                            <div style="color:firebrick">Te rugam sa selecteazi unul sau mai multe domenii</div>
                        }
                    </div>
                </div>
            </div>


            @* Creare Cont *@
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default button" value="Creeaza cont" />
                </div>
            </div>
        }

        if (ViewBag.Message != null)
        {
            <div class="alert alert-danger">
                <br /><br />
                <strong>Eroare!</strong>@ViewBag.Message
            </div>
        }
    }

    @* spre Login *@
    <div>
        @Html.ActionLink("Intra in Cont", "Login", "Account")
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


