<h2 class="titlu">Utilizatori</h2>


<body style="background-color:white;">
    <div class="row">
        <br /><br /> <br />

        <div class="cv-3">
            @for (int i = 1; i <= Model.Rows.Count; i++)
            {
                <div class="" style="text-align:left; padding-left:45px; padding-top:30px;">
                    <h2 class="angajator">Nume: @Model.Rows[i - 1][0] @Model.Rows[i - 1][1]</h2>
                    <p class="">Email: @Model.Rows[i - 1][2]</p>
                    <p class="">
                        Telefon: @Model.Rows[i - 1][3]
                    </p>
                    <p class="">Orasul in care locuieste: @Model.Rows[i - 1][4]</p>
                </div>
            }

             @*  Documente incarcate *@
                <div class="" style=" padding-right: 100px; margin-left:400px; ">
                    <h2 style="margin-top: -400px; color:darkslategrey; font-family:'Lato', sans-serif;">Documente încărcate </h2>
                </div>

                <div class="form-group" style="margin-left: 350px; padding-bottom: 90px; margin-top:-5px;">
                    <div>
                        <br /><br /><br />
                        @Html.Action("DetaliiCV_Angajator", "CV")
                    </div>
                </div>
                <br /><br />              
        </div>
    </div>
</body>

