@model IEnumerable<SistemRecrutare.Models.DetaliiCvModel>

@{
    ViewBag.Title = "DetaliiCV";
}

@foreach (var cv in Model)
{
    <div class="cvs" style="height:105px; display:inline-block;  padding:30px;">

        <p class="nume">
            @Html.DisplayNameFor(model => model.nume_fisier)
            @Html.DisplayFor(modelItem => cv.nume_fisier)
        </p>
        <a href="@Url.Action("DescarcaFisierAngajator", "CV", new { @id_cv = @cv.id_cv})">
            <img src="~/Content/Img/download1.png" alt="Descarcă" height="22" width="25" style="" />
            Descarcă Fișier
        </a>
        <br /><br /><br /><br /><br />
    </div>
}


