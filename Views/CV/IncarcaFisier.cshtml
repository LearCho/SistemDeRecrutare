@model SistemRecrutare.Models.CVModels

@{
    ViewBag.Title = "IncarcaFisier";
}

<head>
    <style type="text/css">
        .label-fisier{
            margin-top: -8px;
            padding-left: 70px;
        }

        .fisier{
            padding-left: 75px;
        }

        .but{
            margin-right: 90px;
        }
    </style>
</head>
<body style="background-color: white;">
    <div style=" text-align:center;">
        <br /><br />
        <h2 style="display:inline-block;">Incarcă un CV</h2>

        @using (Html.BeginForm("IncarcaFisier", "CV", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            @Html.AntiForgeryToken()

    <div class="form-horizontal" style="display:inline-block;">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="display:inline-block; ">
            @Html.LabelFor(model => model.fisiere, htmlAttributes: new { @class = "control-label col-md-2 label-fisier" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.fisiere, "", new { @type = "file", @multiple = "multiple", @class = "fisier" })
                @Html.ValidationMessageFor(model => model.fisiere, "", new { @class = "text-danger" })
                <h6>(Următoarele formate sunt valide: .DOC, .DOCX, .PDF)</h6>
            </div>
        </div>

        <div class=" but">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Incarcă CV" class="btn btn-primary" />
            </div>
        </div>

        @* Mesaj verificare format dupa incarcare *@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 text-danger">
                @ViewBag.StatusFisier
            </div>
        </div>

        <hr />
        @* Documente incarcate *@

    <div style="text-align:center;">
        <h2 style="display:inline-block; padding-left: 40px;">Documentele mele</h2><br />
        <h4 style="display:inline-block; padding-left: 40px;color:dodgerblue">(Documentele pe care le vei trimite către angajatori)</h4>
    </div>

        <div class="form-group">
            <div class="col-md-8">
                @Html.Action("DetaliiCV", "CV", new { @email = @HttpContext.Current.Application["Email"] })
            </div>
        </div>
    </div>
        }
    </div>
</body>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

