            <div align="justify" class="col-md-1">
                <img src="~/Content/Img/search1.png" alt="Cauta joburi" height="29" width="31">
            </div>
            <div class="col-md-5">
                <a href="https://asp.net" class="btn btn-primary btn-lg" onclick="">Cauta job &raquo;</a>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-1"></div>
