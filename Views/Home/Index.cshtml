@*@model SistemRecrutare.Models.CautaJobCuvantCheieModel*@
@model IEnumerable<SistemRecrutare.Models.job>

@{
	ViewBag.Title = "Locuri de munca - Aplica";
}

<body style="background-color:white">
	@* Slideshow Joburi - Angajatori *@
	@using (Html.BeginForm("Index", "Home"))
	{
		<br /><br />
			<div class=" h-100" style="text-align:center; bottom:-5px;">
				<h2 class="animated fadeInUp ease-out-circ d-1 a-2" style="font-family: 'Lato', sans-serif; color:darkcyan;">
					ANUNTURI<span class="nowrap"> RECENTE</span>
				</h2>
			</div>

		<div id="slideshow">
			@foreach (var job in Model)
			{
				<div class="">
					@job.angajator - @job.denumire_job
					@if (job.imagine_job.ToString() != "")
					{
						var base64 = Convert.ToBase64String((byte[])job.imagine_job);
						var imgsrc = string.Format("data::image/jpg;base64,{0}", base64);

						<img src='@imgsrc' style="max-width:140px; max-height:70px;border-radius:35px;" class="imageclass" />
					}
				</div>
			}
		</div>
	}

	@* Imagine homepage cu text *@
	<div class="homepage-front-image">
		<img src="~/Content/Img/front1.png" alt="platforma-job" height="600" width="1295">
		<div class="text-on-img">
			<h1 style="font-size: 48px;">Aplică la jobul mult visat</h1>
			<h3 style="font-family: 'Consolas', monospace;">Găsește locul de muncă potrivit pentru tine in anunțurile postate de angajatori</h3>
		</div>
	</div>

	<div class="jumbotron">
		<div class="row">
			<div class="col-md-10"></div>
		</div>

		@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
		{
			<div class="row">
				<div class="col-md-1"></div>

				@* Cauta Job *@
				<div class="col-md-3"></div>

				<div align="justify" class="col-md-1">
					@*<img src="~/Content/Img/search1.png" alt="Cauta joburi" height="29" width="31">*@
				</div>

				<div class="col-md-5"></div>
				<div class="col-md-1"></div>
				<div class="col-md-1"></div>
			</div>
		}
	</div>
</body>
