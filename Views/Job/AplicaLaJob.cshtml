@model System.Data.DataTable

@{
    ViewBag.Title = "Joburi";
}

    <body style="background-color:white;">
        <div class="row" >
            <br /><br />
            <h2 class="titlu"> </h2>
            <br />

            <div class="wrapper-centru">
                @for (int i = 1; i <= Model.Rows.Count; i++)
                {
                <div class="job" style="height:520px; display:inline-block;">
                    @if (Model.Rows[i - 1][5].ToString() != "")
                    {
                        var base64 = Convert.ToBase64String((byte[])Model.Rows[i - 1][5]);
                        var imgsrc = string.Format("data::image/jpg;base64,{0}", base64);

                        <img src='@imgsrc' style="max-width:240px; max-height:170px" class="imageclass" />
                    }
                    else
                    {
                        <img src="~/Content/Img/jobs1.png" style="max-width:240px; max-height:170px" class="imageclass" />
                    }
                    <h1 style="color:darkcyan; font-family:'Lato', sans-serif"> @Model.Rows[i - 1][1]</h1>
                    <p class="angajator">@Model.Rows[i - 1][4]</p>
                    <p class="data">Data adăugare: @string.Format("{0:MM/dd/yyyy}", Convert.ToDateTime(Model.Rows[i - 1][7]))</p>
                    <p class="">
                        <b>@Model.Rows[i - 1][10]</b>
                    </p>
                    <p class="data">Expiră la: @string.Format("{0:MM/dd/yyyy}", Convert.ToDateTime(Model.Rows[i - 1][3]))</p>
                    <p class="descriere">
                        <b>Descriere și Cerințe</b> <br />
                        @Model.Rows[i - 1][6]
                    </p>
                    <p hidden>@Model.Rows[i - 1][2]</p><br />
                    <p>
                        <button>
                            <a href="@Url.Action("TrimiteNotificareAplicareEmail", "Job", new { @cod_job = @Model.Rows[i - 1][2], @class = "text-buton" })">
                                Aplică
                            </a>
                            @*@Html.ActionLink("Aplica", "AplicaLaJob", "Job", new { @cod_job = @Model.Rows[i - 1][2], @class = "text-buton" })*@
                        </button>
                    </p>
                </div>

                    if (i != 0 && i % 3 == 0)
                    {
                        <hr />
                    }
                }

            </div>
        </div>
    </body>

@*------------------------------------------------------------*@
