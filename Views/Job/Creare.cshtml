@model SistemRecrutare.Models.JobModel

@{
    ViewBag.Title = "Administrare - Creare job";
}

<div class="row" style="background-color:#f5f0f0">
    @*row 1*@
    <div class="row">
        <div class="col-md-5"></div>
        <div class="col-md-5">
            <h2 style="font-family:'Berlin Sans FB';">Job nou</h2>
        </div>
    </div>

    @*row 2*@
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-9">
            @*@Html.ActionLink("Inapoi la Lista", "Lista")*@
            <a href='@Url.Action("Lista", "Job")'>
                <img src='@Url.Content("~/Content/Img/back2.png")' width="55" height="55" />
                <text style="font-family:'Berlin Sans FB'">Inapoi la Lista</text>
            </a>
        </div>
    </div>

    @*row 3*@
    <div class="row">
        <div class="col-md-5"></div>
        <div class="col-md-5">
            <h4 style="font-family:'Comic Sans MS'">Adaugati in lista de joburi</h4>
        </div>
    </div>

    @*row 4*@
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-9">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.denumire_job, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.denumire_job, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.denumire_job, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.cod_job, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.cod_job, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.cod_job, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.data_expirare, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.data_expirare, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.data_expirare, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Creeaza" class="button btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>

@*------------------css---------------------*@
<style type="text/css">
    .button {
        position: relative;
        margin-top: 1%;
        margin-left: 10%;
        margin-bottom: 2%;
        /*font-family: 'Berlin Sans FB';*/
        background-color: white;
        color:darkcyan;
    }
    </style>
