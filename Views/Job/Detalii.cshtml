
@model System.Data.DataTable
@{
    ViewBag.Title = "Detalii";
}

<body style="background-color:white;">
    <div class="row">
        <br /><br /> <br />

        @* Detalii Job *@
    <div class="cv-1">
        @for (int i = 1; i <= Model.Rows.Count; i++)
        {
            <div class="" style="text-align:left; padding-left:45px; padding-top:25px;">
                @if (Model.Rows[i - 1][5].ToString() != "")
                {
                    var base64 = Convert.ToBase64String((byte[])Model.Rows[i - 1][5]);
                    var imgsrc = string.Format("data::image/jpg;base64,{0}", base64);

                    <img src='@imgsrc' style="max-width:240px; max-height:170px" class="imageclass" />
                }
                else
                {
                    <img src="~/Content/Img/jobs1.png" style="max-width:240px; max-height:170px" class="imageclass" />
                }
                <h2 class="rol">Rol:</h2>
                <h1 style="color:darkcyan; font-family:'Lato', sans-serif; width: 300px;"> @Model.Rows[i - 1][1]</h1>
                <p class="angajator">@Model.Rows[i - 1][4]</p>
                <p class="data">Data adăugare: @string.Format("{0:MM/dd/yyyy}", Convert.ToDateTime(Model.Rows[i - 1][7]))</p>
                <p class="">
                    <b>@Model.Rows[i - 1][10]</b>
                </p>
                <p class="">Disponibil în: @Model.Rows[i - 1][8] @Model.Rows[i - 1][9]</p>
                <p class="data">Expiră la: @string.Format("{0:MM/dd/yyyy}", Convert.ToDateTime(Model.Rows[i - 1][3]))</p>
                <p class="descriere">
                    <b>Descriere și Cerințe</b> <br />
                    @Model.Rows[i - 1][6]
                </p>
                <p hidden>@Model.Rows[i - 1][2]</p><br />
            </div>

            <div class="cv-2" style="text-align:left; padding-left:45px;">
                <h2 class="rol">Aplicant:</h2>
                <h1 style="color:darkcyan; font-family:'Lato', sans-serif">@Model.Rows[i - 1][16]</h1>
                <p class="data">Email: @Model.Rows[i - 1][14]</p>
                <p class="data">Data aplicare: @string.Format("{0:MM/dd/yyyy}", Convert.ToDateTime(Model.Rows[i - 1][15]))</p>
            </div>
            @* Detalii Documente incarcate *@
            <div class="" style="text-align:right; padding-right: 180px;">
                <h2 style="margin-top: -782px; color:darkslategrey; font-family:'Lato', sans-serif;">Documente încărcate de aplicant</h2>
            </div>

            <div class="form-group" style="padding-left: 275px; padding-bottom: 90px; margin-top:15px;">
                <div>
                    @Html.Action("DetaliiCV", "CV", new { @email = @Model.Rows[i - 1][14], @AplicantSauAngajator = "Angajator" })
                </div>
            </div>
            <br /><br /><br /><br /><br />
            <hr />

    <div class="box" style="margin-left: 410px; margin-top: -200px;">
        <p>Poți notifica aplicantul dacă aplicația sa a trecut mai departe.</p>
        <p class="data">Aprobă sau respinge aplicația candidatului folosind una dintre opțiunile de mai jos:</p>
        <br /><br />
        <a href="@Url.Action("AprobaAplicatie", "Job", new { @email = @Model.Rows[i - 1][14]})" 
           class="button1 bouncy" style="font-family: 'Lato', sans-serif; font-weight:bold; background-color:darkcyan; text-align:center; 
         border:0.38em solid darkcyan; box-sizing: border-box; color:white; padding:3px;">Abrobă</a>
        <a href="@Url.Action("RespingeAplicatie", "Job", new { @email = @Model.Rows[i - 1][14]})" class="button1 bouncy" 
           style="animation-delay:0.07s; font-family: 'Lato', sans-serif; font-weight:bold; background-color:orangered; 
         text-align:center; border:0.38em solid orangered; box-sizing: border-box; color:white; padding:3px;">Respinge</a>
        <br />
    </div>
    }

    </div>

    </div>
</body>

