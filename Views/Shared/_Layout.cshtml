<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Platforma de recrutare</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/modernizr")

    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    @*--------------------------------------------------------------*@
    @*------------------------------Css-----------------------------*@
    <style type="text/css">
        .corp { /* img fundal pagini */
            background-color: whitesmoke;
            /*background-image: url(/Content/Img/blue1.png);
            background-size: 1600px 1650px;
            background-repeat: no-repeat;*/
        }

        .col-md-4 { /* sectiuni pagina principala */
            padding-top: 20px;
            padding-bottom: 15px;
            margin-right: 10px;
            margin-bottom: 10px;
            margin-left: 6px;
            margin-right: 6px;
            color: inherit;
            background-color: white;
        }

        .img-cauta-job {
            margin-left: 15px;
        }

        a.imagn { /* imagine acasa*/
            background-image: url(~/Content/Img/home2.png);
            margin-left: 2%;
        }

        .page-footer { /* footer */
            background-color: transparent;
            padding-bottom: 20px;
            color: black;
            font-size: small;
        }

        .nav { /* a doua bara de sus */
            background-color: transparent;
            font-weight: bold;
            opacity: 0.88;
            color: white;
        }

        .navbar-inverse {
            background-color: white;
            opacity: 0.88;
        }

        .navbar-new { /* bara sus */
            background-color: white;
            /*background-image: url(/Content/Img/purple1.png);*/
            border-color: whitesmoke;
            color: white;
            font-weight: bold;
            height: 95px;
        }

            .navbar-new:hover { /* bara sus */
                font-size: 101%;
                color: Highlight;
            }

        .nav-link-white {
            color: darkslategrey;
        }

         @* search *@
      .search-box {
        position: relative;
        float: right;
    }

         .search-box input {
        height: 34px;
        border-radius: 20px;
        padding-left: 35px;
        border-color: #ddd;
        box-shadow: none;
    }

         .search-box i {
        color: #a0a5b1;
        position: absolute;
        font-size: 19px;
        top: 8px;
        left: 10px;
    }
    </style>
    @*--------------------------------------------------------------*@
</head>

<body class="corp">
    <div class="navbar-new navbar navbar-fixed-top">
        <div class="col-md-2" style="top:-12px; left:-12px; opacity:0.85">
            <img src="~/Content/Img/acasa.png" alt="Cauta joburi" height="102" width="220">
        </div>

        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "imagn" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*Acasa*@
                    <li class="nav-item">
                        @*@Html.ActionLink("Acasa", "Index", "Home")*@
                        <a class="nav-link-white" href="@Url.Action("Index","Home")" title="Acasă" style="margin-top: 4px;">
                            <img src="~/Content/Img/home3.png" alt="Acasă" height="22" width="31" style="margin-bottom: 3px;" />
                            Acasă
                        </a>
                    </li>

                    <li class="nav-item">
                        @*Pagina Joburi*@
                        <a class="nav-link-white" href="@Url.Action("ListaUtilizator","Job")" title="Joburi">
                            <img src="~/Content/Img/jobs2.png" alt="Joburi" height="33" width="34" />
                            Joburi
                        </a>
                    </li>

                    <li class="nav-item">
                        @*Pagina Cariera*@
                        <a class="nav-link-white" href="@Url.Action("Cariera","Home")" title="Carieră">
                            <img src="~/Content/Img/career1.png" alt="Carieră" height="31" width="32" />
                            Carieră
                        </a>
                    </li>

                    <li>
                        @*Cautare*@
                        <div class="search-box" style="margin-top: 12px; margin-left:10px;">
                            <i class="material-icons">&#xE8B6;</i>
                            @Html.TextBox("val_cautare", null, new { @class = "form-control", @placeholder = "Cauta..." })
                        </div>
                    </li>
                </ul>         

                @*Logare*@
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @*Div Footer*@
        @RenderBody()
        <hr />
        <footer class="page-footer">
            <p>&copy; @DateTime.Now.Year – Sistem de recrutare – LC</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
